{% block content %}

<p>
<strong>
    Login
</strong><br>
{{ login_message }}
</p>

<form action="{{ url }}" method="post">
<input type="hidden" name="next" value="{{ next_url }}">
<div class="form-group">
    <label for="login">Username</label>
    <input type="text" name="login" value="{{ login }}">
</div>
<div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password">
</div>
<div class="form-group">
    <button type="submit" name="form.submitted.login" value="Log In" class="btn btn-default">Log In</button>
</div>
</form>

<p>
<strong>
    Register
</strong><br>
{{ register_message }}
</p>

<form action="{{ url }}" method="post">
<input type="hidden" name="next" value="{{ next_url }}">
<div class="form-group">
    <label for="login">Username</label>
    <input type="text" name="login" value="{{ login }}">
</div>
<div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password">
</div>
<div class="form-group">
    <button type="submit" name="form.submitted.register" value="Register" class="btn btn-default">Register</button>
</div>
</form>

{% endblock content %}
